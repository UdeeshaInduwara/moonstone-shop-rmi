<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.jewelryshoprmi.controller.JewelryManageController">
   <children>
      <TableView fx:id="tblJewelry" layoutX="23.0" layoutY="30.0" onMouseClicked="#selectJewelryFromTbl" prefHeight="215.0" prefWidth="901.0">
         <columns>
            <TableColumn prefWidth="75.0" text="Jew ID" />
            <TableColumn prefWidth="144.0" text="Name" />
            <TableColumn prefWidth="126.0" text="Metal" />
            <TableColumn prefWidth="140.0" text="Carat" />
            <TableColumn prefWidth="117.0" text="Weight" />
            <TableColumn prefWidth="122.0" text="Size" />
            <TableColumn prefWidth="171.0" text="Price" />
         </columns>
      </TableView>
      <JFXTextField fx:id="txtJewelryID" layoutX="23.0" layoutY="273.0" promptText="Jewelry ID" />
      <JFXTextField fx:id="txtName" layoutX="176.0" layoutY="273.0" promptText="Name" />
      <JFXTextField fx:id="txtMetal" layoutX="329.0" layoutY="273.0" promptText="Metal" />
      <JFXTextField fx:id="txtCarat" layoutX="483.0" layoutY="273.0" promptText="Carat" />
      <JFXTextField fx:id="txtWeight" layoutX="176.0" layoutY="327.0" promptText="Weight" />
      <JFXTextField fx:id="txtSize" layoutX="329.0" layoutY="327.0" promptText="Size" />
      <JFXTextField fx:id="txtPrice" layoutX="483.0" layoutY="327.0" promptText="Price" />
      <JFXButton buttonType="RAISED" graphicTextGap="10.0" layoutX="789.0" layoutY="273.0" onAction="#updateJewelry" prefHeight="25.0" prefWidth="135.0" style="-fx-background-color: #00b16a;" text="Update" textFill="WHITE">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assest/Restart_30px.png" />
               </image>
            </ImageView>
         </graphic></JFXButton>
      <JFXButton buttonType="RAISED" graphicTextGap="10.0" layoutX="640.0" layoutY="273.0" onAction="#deleteJewelry" prefHeight="25.0" prefWidth="135.0" style="-fx-background-color: #F62459;" text="Delete" textFill="WHITE">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assest/Delete_30px.png" />
               </image>
            </ImageView>
         </graphic></JFXButton>
      <JFXButton buttonType="RAISED" graphicTextGap="10.0" layoutX="789.0" layoutY="327.0" onAction="#addJewelry" prefHeight="25.0" prefWidth="135.0" style="-fx-background-color: orange;" text="Add" textFill="WHITE">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assest/Ok_30px.png" />
               </image>
            </ImageView>
         </graphic></JFXButton>
   </children>
</AnchorPane>
